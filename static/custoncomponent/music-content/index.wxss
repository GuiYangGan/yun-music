@import '../../custoncomponent/font/index.wxss';

.title-wrapper {
  height: 50px;
  background: #f0413f;
  color: #fff;
  font-size: 18px;
  line-height: 45px;
  text-align: center;
  position: relative;
  display: grid;
  grid-template-columns: 50% 50%;
}

.title-bottom-line {
  position: absolute;
  bottom: 7px;
  height: 5px;
  width: 30px;
  border-radius: 2.5px;
  background: #fff;
  transition: all 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
}

.swiper-wrapper {
  line-height: 30px;
}

.wrapper {
  height: calc(100vh - 45px);
}

.swiper-item-wrapper {
  margin: 0 16px;
  height: 100%;
  line-height: 30px;
  border-radius: 8px;
}

.swiper-img {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.swiper-nodata-wrapper {
  height: 150px;
  width: 100vw;
  text-align: center;
  position: absolute;
  top: 55px;
}

.swiper-nodata {
  font-size: 150px;
  color: #f0413f;
  line-height: 150px;
}

.secondary-wrapper {
  display: grid;
  grid-template-columns: repeat(4, 25%);
  position: relative;
  text-align: center;
  margin-top: 16px;
}

.secondary-content {
  line-height: 30px;
}

.secondary-text {
  font-size: 12px;
}

.secondary-icon {
  display: block;
  color: #fff;
  background: #f0413f;
  margin: 0 auto;
  height: 48px;
  width: 48px;
  line-height: 48px;
  border-radius: 50%;
  overflow: hidden;
}

.icon-fontsize {
  font-size: 24px;
}
